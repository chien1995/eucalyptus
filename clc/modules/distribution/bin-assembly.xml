<assembly>
    <id>bin</id>
    <includeBaseDirectory>true</includeBaseDirectory>
    <baseDirectory>eucalyptus-cloud-${euca.version}</baseDirectory>
    <formats>
        <!--<format>tar.gz</format>-->
        <!--<format>tar.bz2</format>-->
        <format>zip</format>
    </formats>

    <fileSets>
         <fileSet>
            <directory>../../target</directory>
            <outputDirectory>usr/share/eucalyptus</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>../../target</directory>
            <outputDirectory>usr/lib</outputDirectory>
            <includes>
                <include>*.so</include>
            </includes>
        </fileSet>
         <fileSet>
            <directory>../core/conf</directory>
            <outputDirectory>etc/eucalyptus/cloud.d/</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>../axis2-transport/conf</directory>
            <outputDirectory>etc/eucalyptus/cloud.d/</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>../cluster-manager/conf</directory>
            <outputDirectory>etc/eucalyptus/cloud.d/</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
       <fileSet>
            <directory>../www/conf</directory>
            <outputDirectory>etc/eucalyptus/cloud.d/</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>../../</directory>
            <outputDirectory>etc/eucalyptus/</outputDirectory>
            <includes>
                <include>cloud.xml</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>../www/webapps</directory>
            <outputDirectory>var/lib/eucalyptus/webapps</outputDirectory>
            <includes>
                <include>root.war</include>
            </includes>
        </fileSet>
    </fileSets>

    <modulesSets>
        <moduleSet>
            <sources>
                <outputDirectory>etc/eucalyptus/cloud.d</outputDirectory>
                <includeModuleDirectory>true</includeModuleDirectory>
                <includes>
                    <include>../conf/**</include>
                </includes>
            </sources>
        </moduleSet>
    </modulesSets>

    <dependencySets>
        <dependencySet>
            <outputDirectory>usr/share/eucalyptus</outputDirectory>
            <excludes>
                <exclude>org.apache.axis2:addressing:mar</exclude>
                 <exclude>org.apache.rampart:rahas:mar</exclude>
                 <exclude>org.apache.axis2:mex:mar</exclude>
                 <exclude>org.apache.rampart:rampart:mar</exclude>
            </excludes>
        </dependencySet>
        <dependencySet>
            <outputDirectory>var/lib/eucalyptus/modules</outputDirectory>
            <includes>
                <include>org.apache.axis2:addressing:mar</include>
                <include>org.apache.rampart:rahas:mar</include>
                <include>org.apache.axis2:mex:mar</include>
                <include>org.apache.rampart:rampart:mar</include>
            </includes>
        </dependencySet>
    </dependencySets>
</assembly>
